
<li class="row rating-<%= book.rating %>">
  <div class="col-1">
    <a href="#" target="_blank">
      <%= image_from_amazon(book.amazon_id) %>
    </a>
    <p class="txt-center rating"><strong><%= book.rating %></strong>/5</p>
  </div>

  <div class="col-5">
    <h3><a href="#"><%= book.title %></a></h3>
    <p><em>Written by <%= book.author %></em></p>

    <div>
      <p>
        <%= book.description %>
      </p>
    </div>
    <span>
      <% book.genres.each do |genre| %>
         <span class="label label-small"><%= genre.name %> </span>
      <% end %>
    </span>
  </div>
</li>
